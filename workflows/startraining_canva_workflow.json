{
  "name": "StarTraining Pipeline with Canva",
  "nodes": [
    {
      "parameters": {
        "pollTimes": {
          "item": [
            {
              "mode": "everyMinute"
            }
          ]
        },
        "triggerOn": "specificFolder",
        "folderToWatch": {
          "__rl": true,
          "value": "1ggqu326-4x_YghpkjTsrg9_AVKpr92Qt",
          "mode": "id"
        },
        "event": "fileCreated",
        "options": {}
      },
      "id": "node-gdrive-trigger",
      "name": "1. Google Drive Trigger",
      "type": "n8n-nodes-base.googleDriveTrigger",
      "typeVersion": 1,
      "position": [240, 300],
      "credentials": {
        "googleDriveOAuth2Api": {
          "id": "YOUR_GOOGLE_DRIVE_CREDENTIAL_ID",
          "name": "Google Drive account"
        }
      }
    },
    {
      "parameters": {
        "jsCode": "// Extract monday_date and source_label from filename\nconst fileName = $input.first().json.name;\n\n// Remove extension\nconst name = fileName.replace('.docx', '').replace('.odt', '');\n\n// Extract date (first 8 digits)\nconst match = name.match(/^(\\d{8})_(.+)$/);\n\nif (!match) {\n  throw new Error(`Invalid filename format: ${fileName}`);\n}\n\nconst mondayDate = match[1];\nconst rest = match[2];\n\n// Extract semana and ciclo\nconst match2 = rest.match(/[sS]emana\\s+(\\d+)\\s+[cC]ICLO\\s+(\\d+)/i);\nlet sourceLabel;\n\nif (match2) {\n  sourceLabel = `Semana_${match2[1]}_Ciclo_${match2[2]}`;\n} else {\n  sourceLabel = rest.replace(/ /g, '_');\n}\n\nreturn {\n  json: {\n    fileName: fileName,\n    mondayDate: mondayDate,\n    sourceLabel: sourceLabel\n  }\n};"
      },
      "id": "node-extract-info",
      "name": "2. Extract Info from Filename",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [460, 300]
    },
    {
      "parameters": {
        "method": "POST",
        "url": "http://host.docker.internal:5001/run-single",
        "sendBody": true,
        "specifyBody": "json",
        "jsonBody": "={{ JSON.stringify({ file_name: $json.fileName }) }}",
        "options": {
          "timeout": 300000
        }
      },
      "id": "node-webhook",
      "name": "3. Run Pipeline (Webhook)",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.2,
      "position": [680, 300]
    },
    {
      "parameters": {
        "conditions": {
          "options": {
            "caseSensitive": true,
            "leftValue": "",
            "typeValidation": "strict"
          },
          "conditions": [
            {
              "id": "condition-success",
              "leftValue": "={{ $json.status }}",
              "rightValue": "success",
              "operator": {
                "type": "string",
                "operation": "equals"
              }
            }
          ],
          "combinator": "and"
        },
        "options": {}
      },
      "id": "node-if-success",
      "name": "4. Check Pipeline Success",
      "type": "n8n-nodes-base.if",
      "typeVersion": 2,
      "position": [900, 300]
    },
    {
      "parameters": {
        "batchSize": 1,
        "options": {}
      },
      "id": "node-split-batches",
      "name": "5. Loop Through Days",
      "type": "n8n-nodes-base.splitInBatches",
      "typeVersion": 3,
      "position": [1120, 200]
    },
    {
      "parameters": {
        "jsCode": "// Get the current item from canva_data array\nconst allItems = $('4. Check Pipeline Success').first().json.canva_data;\nconst currentIndex = $('5. Loop Through Days').context.currentRunIndex;\nconst currentDay = allItems[currentIndex];\n\nreturn {\n  json: {\n    DAY: currentDay.DAY,\n    DATE: currentDay.DATE,\n    SOURCE: currentDay.SOURCE,\n    Body: currentDay.Body,\n    index: currentIndex,\n    total: allItems.length\n  }\n};"
      },
      "id": "node-get-day-data",
      "name": "6. Get Current Day Data",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [1340, 200]
    },
    {
      "parameters": {
        "method": "POST",
        "url": "https://api.canva.com/rest/v1/autofills",
        "authentication": "predefinedCredentialType",
        "nodeCredentialType": "oAuth2Api",
        "sendBody": true,
        "specifyBody": "json",
        "jsonBody": "={\n  \"brand_template_id\": \"EAG9R2WwCkE\",\n  \"data\": {\n    \"DAY\": {\n      \"type\": \"text\",\n      \"text\": \"{{ $json.DAY }}\"\n    },\n    \"DATE\": {\n      \"type\": \"text\",\n      \"text\": \"{{ $json.DATE }}\"\n    },\n    \"SOURCE\": {\n      \"type\": \"text\",\n      \"text\": \"{{ $json.SOURCE }}\"\n    },\n    \"Body\": {\n      \"type\": \"text\",\n      \"text\": \"{{ $json.Body }}\"\n    }\n  }\n}",
        "options": {}
      },
      "id": "node-canva-autofill",
      "name": "7. Canva Create Design",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.2,
      "position": [1560, 200],
      "credentials": {
        "oAuth2Api": {
          "id": "YOUR_CANVA_OAUTH2_CREDENTIAL_ID",
          "name": "Canva OAuth2"
        }
      }
    },
    {
      "parameters": {
        "amount": 5,
        "unit": "seconds"
      },
      "id": "node-wait",
      "name": "8. Wait for Canva",
      "type": "n8n-nodes-base.wait",
      "typeVersion": 1.1,
      "position": [1780, 200]
    },
    {
      "parameters": {
        "method": "GET",
        "url": "=https://api.canva.com/rest/v1/autofills/{{ $('7. Canva Create Design').json.job.id }}",
        "authentication": "predefinedCredentialType",
        "nodeCredentialType": "oAuth2Api",
        "options": {}
      },
      "id": "node-canva-status",
      "name": "9. Check Canva Status",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.2,
      "position": [2000, 200],
      "credentials": {
        "oAuth2Api": {
          "id": "YOUR_CANVA_OAUTH2_CREDENTIAL_ID",
          "name": "Canva OAuth2"
        }
      }
    },
    {
      "parameters": {
        "method": "POST",
        "url": "=https://api.canva.com/rest/v1/designs/{{ $json.job.result.design.id }}/exports",
        "authentication": "predefinedCredentialType",
        "nodeCredentialType": "oAuth2Api",
        "sendBody": true,
        "specifyBody": "json",
        "jsonBody": "{\n  \"format\": {\n    \"type\": \"png\"\n  }\n}",
        "options": {}
      },
      "id": "node-canva-export",
      "name": "10. Export as PNG",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.2,
      "position": [2220, 200],
      "credentials": {
        "oAuth2Api": {
          "id": "YOUR_CANVA_OAUTH2_CREDENTIAL_ID",
          "name": "Canva OAuth2"
        }
      }
    }
  ],
  "connections": {
